{
  "cluster": "<your-cluster-name>",
  "service": "murty-site-service",
  "scaling": {
    "min_tasks": 1,
    "max_tasks": 10,
    "target_cpu_utilization": 70,
    "target_memory_utilization": 80,
    "scale_out_cooldown": 60,
    "scale_in_cooldown": 300
  },
  "alarms": {
    "high_cpu_threshold": 85,
    "high_memory_threshold": 90,
    "evaluation_periods": 2,
    "period_seconds": 60
  },
  "step_scaling": {
    "enabled": true,
    "adjustments": [
      {
        "lower_bound": 0,
        "upper_bound": 10,
        "scaling_adjustment": 10,
        "description": "Increase by 10% when CPU is 85-95%"
      },
      {
        "lower_bound": 10,
        "upper_bound": 20,
        "scaling_adjustment": 20,
        "description": "Increase by 20% when CPU is 95-105%"
      },
      {
        "lower_bound": 20,
        "upper_bound": null,
        "scaling_adjustment": 30,
        "description": "Increase by 30% when CPU is >105%"
      }
    ]
  }
}
